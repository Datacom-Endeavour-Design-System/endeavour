{
  "name": "datacom",
  "version": "1.1.0",
  "private": true,
  "description": "Datacom Endeavour Design System",
  "type": "module",
  "scripts": {
    "test": "nx run-many --target=test",
    "build": "nx run-many --target=build",
    "clean": "nx run-many --target=clean",
    "lint": "nx run-many --target=lint",
    "dev": "concurrently -k npm:dev:*",
    "dev:storybook": "npm run dev --workspace=apps/storybook",
    "dev:react": "npm run dev --workspace=packages/react",
    "dev:stencil": "npm run dev --workspace=packages/stencil",
    "start:storybook": "nx run @datacom/endeavour-storybook:start",
    "start:stencil": "nx run @datacom-digital/endeavour:start",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "author": "endeavour@datacom.co.nz",
  "license": "MIT",
  "workspaces": [
    "./packages/stencil",
    "./packages/react",
    "./apps/storybook"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.2",
    "@nrwl/nx-cloud": "latest",
    "@stencil-community/eslint-plugin": "^0.5.0",
    "@types/date-fns": "^2.6.0",
    "@types/eslint": "^8.44.3",
    "@types/eslint-config-prettier": "^6.11.1",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.5",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.3.1",
    "globals": "^13.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nx": "^16.9.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,html}": "prettier --write",
    "*.css": "stylelint"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "esbuild": "^0.17.12"
  }
}
