{
  "name": "datacom",
  "version": "1.0.0",
  "description": "Datacom Endeavour Design System",
  "scripts": {
    "test": "nx run-many --target=test",
    "build": "nx run-many --target=build",
    "clean": "nx run-many --target=clean",
    "lint": "nx run-many --target=lint",
    "dev": "npm run build && concurrently -k npm:dev:*",
    "dev:storybook": "npm run dev --workspace=apps/storybook",
    "dev:react": "npm run dev --workspace=packages/react",
    "dev:stencil": "npm run dev --workspace=packages/stencil",
    "start:storybook": "nx run @datacom/endeavour-storybook:start",
    "start:stencil": "nx run @datacom/endeavour:start",
    "prepare": "husky install"
  },
  "author": "endeavour@datacom.co.nz",
  "license": "MIT",
  "workspaces": [
    "./packages/stencil",
    "./packages/react",
    "./apps/storybook"
  ],
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^10.11.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nx": "^16.9.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.css": "stylelint"
  },
  "dependencies": {
    "esbuild": "^0.17.12"
  }
}
