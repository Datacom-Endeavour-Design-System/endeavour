{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "composite": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "paths": {
      "@datacom/endeavour": ["packages/stencil"],
      "@datacom/endeavour-angular": ["packages/angular"],
      "@datacom/endeavour-react": ["packages/react"]
    },
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "lib": ["dom", "es2015"],
    "module": "ESNext",
    "target": "es2017"
  }
}
